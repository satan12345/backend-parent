<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mooc.meeting.film.hall.dao.MoocFieldTDao">

    <resultMap type="com.mooc.meeting.film.hall.entity.MoocFieldT" id="MoocFieldTMap">
        <result property="uuid" column="UUID" jdbcType="INTEGER"/>
        <result property="cinemaId" column="cinema_id" jdbcType="INTEGER"/>
        <result property="filmId" column="film_id" jdbcType="INTEGER"/>
        <result property="beginTime" column="begin_time" jdbcType="VARCHAR"/>
        <result property="endTime" column="end_time" jdbcType="VARCHAR"/>
        <result property="hallId" column="hall_id" jdbcType="INTEGER"/>
        <result property="hallName" column="hall_name" jdbcType="VARCHAR"/>
        <result property="price" column="price" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="MoocFieldTMap">
        select
          UUID, cinema_id, film_id, begin_time, end_time, hall_id, hall_name, price
        from mooc_meetingfilm.mooc_field_t
        where UUID = #{uuid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="MoocFieldTMap">
        select
          UUID, cinema_id, film_id, begin_time, end_time, hall_id, hall_name, price
        from mooc_meetingfilm.mooc_field_t
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="MoocFieldTMap">
        select
          UUID, cinema_id, film_id, begin_time, end_time, hall_id, hall_name, price
        from mooc_meetingfilm.mooc_field_t
        <where>
            <if test="uuid != null">
                and UUID = #{uuid}
            </if>
            <if test="cinemaId != null">
                and cinema_id = #{cinemaId}
            </if>
            <if test="filmId != null">
                and film_id = #{filmId}
            </if>
            <if test="beginTime != null and beginTime != ''">
                and begin_time = #{beginTime}
            </if>
            <if test="endTime != null and endTime != ''">
                and end_time = #{endTime}
            </if>
            <if test="hallId != null">
                and hall_id = #{hallId}
            </if>
            <if test="hallName != null and hallName != ''">
                and hall_name = #{hallName}
            </if>
            <if test="price != null">
                and price = #{price}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="uuid" useGeneratedKeys="true">
        insert into mooc_meetingfilm.mooc_field_t(cinema_id, film_id, begin_time, end_time, hall_id, hall_name, price)
        values (#{cinemaId}, #{filmId}, #{beginTime}, #{endTime}, #{hallId}, #{hallName}, #{price})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mooc_meetingfilm.mooc_field_t
        <set>
            <if test="cinemaId != null">
                cinema_id = #{cinemaId},
            </if>
            <if test="filmId != null">
                film_id = #{filmId},
            </if>
            <if test="beginTime != null and beginTime != ''">
                begin_time = #{beginTime},
            </if>
            <if test="endTime != null and endTime != ''">
                end_time = #{endTime},
            </if>
            <if test="hallId != null">
                hall_id = #{hallId},
            </if>
            <if test="hallName != null and hallName != ''">
                hall_name = #{hallName},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
        </set>
        where UUID = #{uuid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mooc_meetingfilm.mooc_field_t where UUID = #{uuid}
    </delete>

</mapper>